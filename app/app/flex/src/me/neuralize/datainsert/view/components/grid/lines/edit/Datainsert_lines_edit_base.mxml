<?xml version="1.0" encoding="utf-8"?>
<mx:TextArea xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" 
		 width="100%"
		  
		  focusIn="textarea1_focusInHandler(event)"
		  focusOut="textarea1_focusOutHandler(event)"
		  creationComplete="textarea1_focusOutHandler()"
		  >

	<fx:Script>
		<![CDATA[
			protected function textarea1_focusInHandler(event:FocusEvent=null):void{
				setStyle("contentBackgroundAlpha", 1)
				setStyle("borderAlpha", 1)
			}
			protected function textarea1_focusOutHandler(event:FocusEvent=null):void{
				setStyle("contentBackgroundAlpha", 0)
				setStyle("borderAlpha", 0)
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</mx:TextArea>
