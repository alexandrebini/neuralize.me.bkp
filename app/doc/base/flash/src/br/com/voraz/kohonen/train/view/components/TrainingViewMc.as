package br.com.voraz.kohonen.train.view.components{	import br.com.voraz.flash.utils.Base;	import br.com.voraz.kohonen.train.controller.TrainCommand;	import br.com.voraz.kohonen.train.view.components.container.TrainingView_container;		import flash.display.MovieClip;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.text.TextField;	public class TrainingViewMc extends MovieClip{		private var txt:TextField				private const maxX:int = 20		private const maxY:int = 20				private var container:TrainingView_container = new TrainingView_container(maxX, maxY)				private var train:TrainCommand				public function TrainingViewMc(){			super();						Base.stage = stage			stage.addEventListener(Event.RESIZE, resize)			stage.scaleMode = StageScaleMode.NO_SCALE			stage.align = StageAlign.TOP_LEFT						txt = this["mc_txt"]			txt.background = true			txt.backgroundColor = 0x000000			//txt.alpha = 0						train = new TrainCommand(txt)			train.addEventListener(Event.CHANGE, change)			train.start(maxX, maxY)						addChildAt(container,0)			container.setPositions(train.positions)									resize()		}				private function change(e:Event):void{			container.ajustPositions(train.positions)		}						private function resize(e:Event=null):void{			var space:Number = 200						txt.width = stage.stageWidth			txt.height = stage.stageHeight						container.width = stage.stageWidth-space			container.height = stage.stageHeight-space						container.x = space/2			container.y = space/2		}									}}